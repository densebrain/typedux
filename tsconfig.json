{
	"compilerOptions": {
		"target": "es2018",
		"lib": [
			"es6",
			"es7",
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"ES2019",
			"ES2020",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"downlevelIteration": true,
		"declaration": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"jsx": "react",
		"outDir": "./dist/commonjs",
		"baseUrl": "./"
	},
	"exclude": [
		"node_modules",
		"dist",
		"lib"
	]
}
