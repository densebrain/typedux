{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es6",
			"es7",
			"es2015",
			"es2016",
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"jsx": "react",
		"baseUrl": "./",
		"outDir": "./dist",
		"paths": {
			"@3fv/typedux": [
				"./src/index.ts"
			],
			"@3fv/typedux/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		]
		
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"lib",
		"dist"
	]
}
